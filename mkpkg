#!/bin/bash

arch=
debian=
fedora=

export __ASC_SRC__=`pwd`

[ -f /etc/os-release ] && . /etc/os-release
[ "${ID_LIKE}" == "debian" ] && debian=1
[ "${ID}" == "arch" ] && arch=1
[ "${ID}" == "fedora" ] && fedora=1
[ "${debian}" ] || [ -f /etc/debian_version ] && debian=1

if [ "${debian}" ]
then
  sudo apt update
  pkg/mkdeb.sh
else
  if [ "${arch}" ]
  then
    sudo pacman -Syy
    pkg/mkaur.sh
  else
    if [ "${fedora}" ]
    then
      sudo dnf update
      pkg/mkrpm.sh fedora
    else
      echo "Unsupported platform"
    fi
  fi
fi
