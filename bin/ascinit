    cd tuir
    cat requirements.txt | sed -e "s/requests=.*/requests>=2.20.0/" > /tmp/tuireq$$
    cp /tmp/tuireq$$ requirements.txt
    rm -f /tmp/tuireq$$
    TUIR_DIR=`pwd`
    ${PYTHON} -m pip install -e "${TUIR_DIR}" > /dev/null 2>&1
    cd ..
    rm -rf tuir
  }
  [ -d tuir$$ ] && mv tuir$$ tuir
}

