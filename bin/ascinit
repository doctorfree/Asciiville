[ "$ask_anim" ] && {
  type -p asciisplash > /dev/null && {
    while true
    do
      read -p "View an ASCII animation ? (y/n) " yn
      case $yn in
        [Yy]* )
              asciisplash -c 1 -a -i
              break
              ;;
        [Nn]* )
              printf "\nExiting.\n"
              exit 0
              ;;
            * ) echo "Please answer yes or no."
              ;;
      esac
    done
  }
}
