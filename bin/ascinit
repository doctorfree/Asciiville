      }
    }
  }
}

have_pip=`type -p pip`
[ "${have_pip}" ] || {
  [ "${quiet}" ] || {
    printf "\n\tInstalling pip ..."
  }
  plat=`uname -s`
  if [ "$plat" == "Darwin" ]
  then
    ${PYTHON} -m ensurepip --upgrade
  else
    if [ "${debian}" ]
    then
      sudo ${APT} install python3-pip > /dev/null 2>&1
    else
      if [ "${arch}" ]
      then
        sudo pacman -U --noconfirm python-pip > /dev/null 2>&1
      else
        sudo ${DNF} install python3-pip > /dev/null 2>&1
      fi
    fi
  fi
  [ "${quiet}" ] || {
    printf " done"
  }
}

